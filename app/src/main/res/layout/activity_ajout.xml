<?xml version="1.0" encoding="utf-8"?>
<!-- Layout pour l'ajout d'un nouvel étudiant -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Champ pour le nom complet -->
        <EditText
            android:id="@+id/editNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom complet" />

        <!-- Champ pour l'âge -->
        <EditText
            android:id="@+id/editAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Semestre"
            android:inputType="number" />

        <!-- Liste déroulante pour la ville -->
        <Spinner
            android:id="@+id/spinnerVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Groupe de boutons radio pour le genre -->
        <RadioGroup
            android:id="@+id/radioGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!-- Option Homme -->
            <RadioButton
                android:id="@+id/radioHomme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homme" />

            <!-- Option Femme -->
            <RadioButton
                android:id="@+id/radioFemme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femme" />
        </RadioGroup>

        <!-- Liste déroulante pour les images -->
        <Spinner
            android:id="@+id/spinnerImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <!-- Bouton d'enregistrement -->
        <Button
            android:id="@+id/btnEnregistrer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>